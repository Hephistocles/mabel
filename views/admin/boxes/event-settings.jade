.box.box-primary(ng-controller="EventSettingsController as ctrl")
	.box-header
		h3.box-title Event Settings
	//- form(editable-form)
	.box-body
		.form-group
			label(for="event-name-field") Event Name: {{ctrl.eventName}}
			input.form-control#event-name-field(type="text", ng-model="ctrl.eventName")
	.box-body
		.form-group
			label(for="event-launch-field") Ticket Launch Date {{ctrl.eventLaunchDate}}
			input.form-control#event-launch-field(type='text', date="ctrl.eventLaunchDate", data-date-format="YYYY/MM/DD HH:mm", datetimepicker)
	.box-body
		.form-group
			label(for="event-close-field") Ticket Close Date {{ctrl.eventCloseDate}}
			input.form-control#event-close-field(type='text', date="ctrl.eventCloseDate", data-date-format="YYYY/MM/DD HH:mm", datetimepicker)
	.box-footer
		button.btn.btn-primary(type="submit") Submit