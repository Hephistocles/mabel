
extends ./admin/main.jade

block prepend variables
	//- these variable will normally be overridden by subpages
	- title = "Dashboard"
	- subtitle = "Control Panel"
	- breadcrumb = [{name:"Dashboard"}]
	- sidebarItems = [{link:"#", name:title, icon:"dashboard", selected:true}, {link:"#", name:"Widgets", icon:"th"}]

	//- notifications and user will normally come from the app-routes context
	- notifications = notifications || []

block content
	.row
		.col-md-12
			h1 Event Stuff
		.col-md-3
			include admin/boxes/event-settings.jade
	.row
		.col-md-12
			h1 Ticket Stuff
		.col-md-8
			include admin/boxes/ticket-types.jade
		.col-md-4
			include admin/boxes/ticket-type-detail.jade
	.row
		.col-md-12
			h1 User Stuff
		.col-md-8
			.col-md-12
				include admin/boxes/user-list.jade
			.col-md-12
				include admin/boxes/user-group.jade
		.col-md-4
			include admin/boxes/user-detail.jade

block append scripts
	script(type = "text/javascript" src="/js/admin/eventsettings.factory.js")
	script(type = "text/javascript" src="/js/admin/eventsettings.controller.js")
	script(type = "text/javascript" src="/js/shared/mabeltable.factory.js")
	script(type = "text/javascript" src="/js/shared/usergroup.factory.js")
	script(type = "text/javascript" src="/js/admin/usergroups.controller.js")
	script(type = "text/javascript" src="/js/admin/userlist.controller.js")
	script(type = "text/javascript" src="/js/admin/userdetail.controller.js")
	script(type = "text/javascript" src="/js/shared/tickettype.factory.js")
	script(type = "text/javascript" src="/js/admin/tickettypedetail.controller.js")
	script(type = "text/javascript" src="/js/admin/tickettypes.controller.js")

block append css
	style.
		.form-group.has-info label {
			color: #00c0ef;
		}
		.form-group.has-info .form-control {
			border-color: #00c0ef !important;
			box-shadow: none;
		}
