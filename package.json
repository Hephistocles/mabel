{
  "name": "Mabel",
  "version": "0.1.0",
  "description": "A May Ball ticketing system",
  "repository": "https://github.com/mabelticketing/mabel",
  "contributors": [
    "Christopher Little <cl554@cam.ac.uk> (http://www.clittle.com)",
    "Thomas Le Feuvre <tjlefeuvre@gmail.com> (http://thomaslefeuvre.com)"
  ],
  "license": "GNU General Public License v2.0",
  "start": "app.js",
  "scripts": {
    "clean:public": "rimraf public/*.html public/**/*.html public/**/**/*.html public/css/*.css public/js/*.js public/lib/css/*.css public/lib/js/*.js",
    "clean:cache": "rimraf .sass-cache/",
    "clean": "parallelshell 'npm run clean:public' 'npm run clean:cache",
    "build:scripts": "echo 'TODO\n'",
    "watch:scripts": "echo 'TODO\n'",
    "build:sass": "sass assets/scss/main.scss:public/css/main.min.css --style compressed",
    "watch:sass": "sass --watch assets/scss:public/css",
    "build:jade": "./jade-build.sh",
    "watch:jade": "./jade-watch.sh",
    "pre-build": "npm run clean && ./structure.sh",
    "pre-watch": "./structure.sh",
    "build": "npm run build:scripts & npm run build:sass & npm run build:jade",
    "watch": "parallelshell 'npm run watch:scripts' 'npm run watch:sass' 'npm run watch:jade'",
    "dev": "parallelshell 'npm run watch -s' 'nodemon --debug app.js' 'node-inspector' 'livereload .'",
    "test": "echo \"We haven't got any tests yet...\" && exit 0",
    "start": "node app.js",
    "prepare": "npm install && bower install && npm run build"
  },
  "dependencies": {
    "body-parser": "^1.10.0",
    "cluster2": "^0.4.26",
    "express": "^4.10.4",
    "html-to-text": "~1.2.0",
    "jade": "^1.8.1",
    "jwt-simple": "~0.2.0",
    "mailcomposer": "~0.2.12",
    "mailgun": "~0.5.0",
    "moment": "~2.9.0",
    "mysql": "^2.5.3",
    "passport": "~0.2.1",
    "passport-http-bearer": "~1.0.1",
    "passport-local": "~1.0.0",
    "passport-raven": "~1.0.0",
    "q": "^1.1.2",
    "request": "^2.51.0",
    "unidecode": "^0.1.3",
    "mailgun-js": "~0.6.8"
  },
  "devDependencies": {
    "livereload": "latest",
    "node-inspector": "^0.12.2",
    "nodemon": "^1.4.1",
    "parallelshell": "^1.2.0",
    "rimraf": "^2.4.2",
    "watch": "^0.16.0"
  }
}
