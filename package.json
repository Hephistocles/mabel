{
  "name": "Mabel",
  "version": "0.1.0",
  "description": "A May Ball ticketing system",
  "repository": "https://github.com/mabelticketing/mabel",
  "contributors": [
    "Christopher Little <cl554@cam.ac.uk> (http://clittle.com)",
    "Thomas Le Feuvre <tjlefeuvre@gmail.com> (http://thomaslefeuvre.com)"
  ],
  "license": "GPL-2.0",
  "start": "app.js",
  "scripts": {
    "clean:public": "rimraf public/*.html public/**/*.html public/**/**/*.html public/css/*.css public/js/*.js public/lib/css/*.css public/lib/js/*.js",
    "clean:cache": "rimraf .sass-cache/",
    "clean": "parallelshell 'npm run clean:public' 'npm run clean:cache'",
    "build:scripts": "cp -r client/js/* public/js/",
    "watch:scripts": "watch 'npm run build:scripts' client/js",
    "build:sass": "sass client/scss/main.scss public/css/main.min.css --style compressed",
    "watch:sass": "sass --watch client/scss:public/css",
    "build:jade": "./scripts/jade-build.sh",
    "watch:jade": "watch 'npm run build:jade' views/client",
    "prebuild": "npm run clean && ./scripts/structure.sh",
    "build": "npm run build:scripts & bower install & npm run build:sass & npm run build:jade",
    "watch": "parallelshell 'npm run watch:scripts' 'npm run watch:sass' 'npm run watch:jade'",
    "inspect": "node-inspector -d 5000",
    "dev": "parallelshell 'npm run watch -s' 'nodemon --debug=5000 app.js'",
    "test": "mocha --reporter nyan ./tests/*.js",
    "start": "node app.js",
    "prepare": "npm install && bower install && npm run build"
  },
  "dependencies": {
    "body-parser": "^1.10.0",
    "cookie-parser": "^1.3.5",
    "express": "^4.10.4",
    "html-to-text": "~1.3.1",
    "jade": "^1.8.1",
    "jwt-simple": "~0.3.0",
    "lodash": "^3.10.1",
    "mailcomposer": "~0.2.12",
    "mailgun-js": "~0.7.1",
    "moment": "~2.10.6",
    "mysql": "^2.5.3",
    "q": "^1.1.2",
    "serve-static": "^1.10.0",
    "socket.io": "^1.3.6",
    "swagger-tools": "^0.9.5",
    "swagger-ui": "^2.1.2",
    "underscore": "^1.8.3",
    "unidecode": "^0.1.3",
    "yamljs": "^0.2.3"
  },
  "devDependencies": {
	"bower": "*",
    "chai": "^3.2.0",
    "livereload": "latest",
    "mocha": "^2.3.2",
    "node-inspector": "^0.12.2",
    "nodemon": "^1.4.1",
    "parallelshell": "^2.0.0",
    "rimraf": "^2.4.2",
    "supertest": "^1.1.0",
    "watch": "^0.16.0"
  }
}
